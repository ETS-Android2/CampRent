<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_interface2"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:background="@drawable/yassmine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/choosebtn"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:visibility="visible"
            app:backgroundTint="#000E0A0A"
            app:icon="@drawable/pic"
            app:iconPadding="6dp"
            app:iconSize="80dp"
            app:iconTint="#EEEDE2E2"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="30dp"

            android:layout_marginRight="50dp"
            android:background="#6BF1E6E6" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="245dp"
            android:alpha=".7"
            app:srcCompat="@drawable/text_white"
            tools:ignore="VectorDrawableCompat" />

        <Spinner
            android:id="@+id/name_equipment"
            android:layout_width="216dp"
            android:layout_height="41dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="50dp"
            android:background="#6B131212"
            android:hint="Title"
            android:inputType="textShortMessage"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            android:translationX="-20dp" />

        <ImageView
            android:id="@+id/imageView_availability"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="340dp"
            app:srcCompat="@drawable/date" />

        <Button
            android:id="@+id/from_date"
            android:layout_width="322dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="50dp"
            android:layout_height="52dp"
            android:layout_marginTop="310dp"
            android:hint="@string/from"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#AEFFFFFF"
            />


        <Button
            android:id="@+id/to_date"
            android:layout_width="322dp"
            android:layout_height="52dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="363dp"
            android:layout_marginRight="50dp"
            app:backgroundTint="#AEFFFFFF"
            android:hint="@string/to"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView_price"
            android:layout_width="47dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="420dp"
            app:srcCompat="@drawable/cash" />


        <EditText
            android:id="@+id/Price"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="429dp"
            android:layout_marginRight="50dp"
            android:background="#6B131212"
            android:hint="Price"
            android:padding="10dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView_phone"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="490dp"
            app:srcCompat="@drawable/contact_phone" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="50dp"
            android:background="#6B131212"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold" />
        <Button
            android:id="@+id/backhome"

            android:layout_width="57dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.08"


            app:backgroundTint="#25FFFFFF"

            app:icon="@drawable/abc_vector_test"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="19dp" />


        <Button
            android:id="@+id/bt_location"
            android:layout_width="76dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="580dp"
            app:backgroundTint="#C1FFFFFF"


            app:icon="@drawable/loc_white"
            app:iconSize="40dp"
            app:rippleColor="#FFFFFF" />

        <EditText
            android:id="@+id/textView1"
            android:layout_width="270dp"
            android:layout_height="83dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="560dp"
            android:layout_marginRight="20dp"
            android:background="#6B131212"
            android:hint="Location"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textStyle="bold"
            android:translationY="30dp" />

        <Button
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="660dp"
            android:text="Publish"
            android:textStyle="bold"
            android:translationY="20dp"
            app:backgroundTint="#6DFFFFFF"
            app:icon="@drawable/pub" />

        <ImageView
            android:id="@+id/title23"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="429dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>