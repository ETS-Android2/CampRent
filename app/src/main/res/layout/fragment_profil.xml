<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDED"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#797685">



            <!--Cover Photo-->

            <ImageView
                android:id="@+id/coverTv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/home_4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatarTv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/home_5"
                    android:src="@drawable/ic_default_image_white">


                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"

                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/emailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"

                        android:layout_marginTop="8dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"

                        android:inputType="phone"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/courgette"
                android:padding="10dp"
                android:text="Favorites"
                android:textColor="#2196F3"
                android:textSize="25sp"

                />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="220dp"
                android:src="@drawable/heart" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleview1"
                android:layout_width="match_parent"
                android:layout_height="662dp"
                android:layout_below="@+id/search_bar"


                android:layout_marginTop="290dp"
                android:background="#4A4848"
                android:backgroundTint="#797685">

            </androidx.recyclerview.widget.RecyclerView>




            <TextView
                android:id="@+id/mail_entry3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </RelativeLayout>
        
    </ScrollView>
    <!--Floating Action Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3F51B5"
        android:src="@drawable/edit_foreground"
        app:backgroundTint="#2196F3" />




</RelativeLayout>